<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TripSorterXamarin"
             x:Class="TripSorterXamarin.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="btnCallAPI" Text="Call Trip Sorter API" Clicked="btnCallAPI_Clicked"></Button>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lblTripInformations" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>